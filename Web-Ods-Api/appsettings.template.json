{
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "ConnectionStrings": {
    "EdFi_Ods": "host=$ODS_DB;port=5432;username=$POSTGRES_USER;password=$POSTGRES_PASSWORD;database=EdFi_{0};Application Name=EdFi.Ods.WebApi",
    "EdFi_Security": "host=$ADMIN_DB;port=5432;username=$POSTGRES_USER;password=$POSTGRES_PASSWORD;database=EdFi_Security;Application Name=EdFi.Ods.WebApi",
    "EdFi_Admin": "host=$ADMIN_DB;port=5432;username=$POSTGRES_USER;password=$POSTGRES_PASSWORD;database=EdFi_Admin;Application Name=EdFi.Ods.WebApi",
    "EdFi_Master": "host=$ADMIN_DB;port=5432;username=$POSTGRES_USER;password=$POSTGRES_PASSWORD;database=postgres;Application Name=EdFi.Ods.WebApi"
  },
  "BearerTokenTimeoutMinutes": "30",
  "DefaultPageSizeLimit": 500,
  "ApiSettings": {
    "Mode": "$API_MODE",
    "MinimalTemplateSuffix": "Ods_Minimal_Template",
    "UsePlugins": false,
    "PopulatedTemplateSuffix": "Ods_Populated_Template",
    "PlainTextSecrets": true,
    "MinimalTemplateScript": "PostgreSQLMinimalTemplate",
    "Engine": "PostgreSQL",
    "OdsTokens": [],
    "PopulatedTemplateScript": "PostgreSQLPopulatedTemplate",
    "UseReverseProxyHeaders": true,
    "PathBase": "/odsapi",
    "Features": [
      {
        "Name": "OpenApiMetadata",
        "IsEnabled": true
      },
      {
        "Name": "AggregateDependencies",
        "IsEnabled": true
      },
      {
        "Name": "TokenInfo",
        "IsEnabled": true
      },
      {
        "Name": "Extensions",
        "IsEnabled": false
      },
      {
        "Name": "Composites",
        "IsEnabled": true
      },
      {
        "Name": "Profiles",
        "IsEnabled": false
      },
      {
        "Name": "ChangeQueries",
        "IsEnabled": true
      },
      {
        "Name": "IdentityManagement",
        "IsEnabled": false
      },
      {
        "Name": "OwnershipBasedAuthorization",
        "IsEnabled": false
      },
      {
        "Name": "UniqueIdValidation",
        "IsEnabled": false
      }
    ],
    "ExcludedExtensions": []
  },
  "Plugin": {
    "Folder": "./plugins",
    "Scripts": [
      "production"
    ]
  },
  "Caching": {
    "Descriptors": {
      "AbsoluteExpirationSeconds": 1800
    },
    "PersonUniqueIdToUsi": {
      "AbsoluteExpirationSeconds": 0,
      "SlidingExpirationSeconds": 14400
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
