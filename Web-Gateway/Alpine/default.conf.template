server {
    listen 80 default_server;
    listen [::]:80;

    server_name  localhost;
    
    location /auth/realms/ {
        return 301 https://$host$request_uri;
    }

    return 301 https://$host$request_uri;
}

server {
    listen       443 ssl;
    listen       [::]:443 ssl;
    server_name  localhost;
    ssl_certificate /ssl/server.crt;
    ssl_certificate_key /ssl/server.key;
    large_client_header_buffers 4 32k;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    

    # Sourced from https://enable-cors.org/server_nginx.html with modifications
    location /${ODS_VIRTUAL_NAME} {
        proxy_pass  http://api;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port 443;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

   location /${ADMIN_API_VIRTUAL_NAME} {
        client_max_body_size 20M;
        resolver 127.0.0.11;
        set $path ${ADMIN_API_VIRTUAL_NAME};
        proxy_pass http://$path;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port 443;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }


    location /${ADMIN_CONSOLE_VIRTUAL_NAME} {
        set $path admin-console:8598;
        resolver 127.0.0.11;
        proxy_pass http://$path/edficonsole/v2.3/v7.2/ds4/saas/tx/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;    
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /edficonsole/v2.3/v7.2/ds4/saas/tx/ {
        set $path admin-console:8598;
        resolver 127.0.0.11;
        proxy_pass http://$path/edficonsole/v2.3/v7.2/ds4/saas/tx/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;    
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

    }

    location /edficonsole/v2.3/v7.2/ds4/saas/tx/assets {
        alias /usr/share/nginx/html/adminconsole/dist/assets/;
        try_files $uri =404;
        access_log off;
        expires max;
    }

    location /assets {
        alias /usr/share/nginx/html/adminconsole/dist/assets/;
        try_files $uri =404;
        access_log off;
        expires max;
    }

    location /edficonsole/v2.3/v7.2/ds4/saas/tx/config.json {
        set $path admin-console:8598;
        resolver 127.0.0.11;
        proxy_pass http://$path/edficonsole/v2.3/v7.2/ds4/saas/tx/config.json;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
     
    location /auth {
        proxy_pass http://keycloak:8080/auth;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header Accept-Encoding "";
        # Increase proxy timeouts
        proxy_connect_timeout 60s;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
        add_header 'Access-Control-Allow-Headers' 'Content-Type, Authorization';
        add_header Content-Security-Policy "frame-src 'self' https://locahost";
    }
}

