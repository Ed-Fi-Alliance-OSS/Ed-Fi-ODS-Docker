{
  "PreserveLoginUrl": "true",
  "ClientValidationEnabled": "true",
  "UnobtrusiveJavaScriptEnabled": "true",
  "DefaultApplicationName": "Default Sandbox Application",
  "DefaultClaimSetName": "Ed-Fi Sandbox",
  "SandboxAdminSQLCommandTimeout": "120",
  "DefaultOperationalContextUri": "uri://ed-fi-api-host.org",
  "MailSettings": {
    "Smtp": {
      "UserName": "Bingo",
      "From": "noreply@ed-fi.org",
      "SpecifiedPickupDirectory": {
        "PickupDirectoryLocation": "/tmp"
      },
      "DeliveryMethod": "SpecifiedPickupDirectory",
      "Password": "Tingo"
    }
  },
  "ConnectionStrings": {
    "EdFi_Ods": "Data Source=$SQLSERVER_DATASOURCE;Initial Catalog=EdFi_{0};User Id=$SQLSERVER_USER;Password=$SQLSERVER_PASSWORD;Application Name=EdFi.Ods.SandboxAdmin;Integrated Security=false;",
    "EdFi_Security": "Data Source=$SQLSERVER_DATASOURCE;Initial Catalog=EdFi_Security;User Id=$SQLSERVER_USER;Password=$SQLSERVER_PASSWORD;Application Name=EdFi.Ods.SandboxAdmin;Integrated Security=false;",
    "EdFi_Admin": "Data Source=$SQLSERVER_DATASOURCE;Initial Catalog=EdFi_Admin;User Id=$SQLSERVER_USER;Password=$SQLSERVER_PASSWORD;Application Name=EdFi.Ods.SandboxAdmin;Integrated Security=false;",
    "EdFi_Master": "Data Source=$SQLSERVER_DATASOURCE;Initial Catalog=master;User Id=$SQLSERVER_USER;Password=$SQLSERVER_PASSWORD;Application Name=EdFi.Ods.SandboxAdmin;Integrated Security=false;"
  },
  "User": {
    "Test Admin": {
      "Email": "$ADMIN_USER",
      "Admin": "true",
      "NamespacePrefixes": ["uri://ed-fi.org", "uri://gbisd.org"],
      "Password": "$ADMIN_PASSWORD",
      "Sandboxes": {
        "Minimal Demonstration Sandbox": {
          "Key": "$MINIMAL_KEY",
          "Type": "Minimal",
          "Secret": "$MINIMAL_SECRET",
          "Refresh": "false"
        },
        "Populated Demonstration Sandbox": {
          "Key": "$POPULATED_KEY",
          "Type": "Sample",
          "Secret": "$POPULATED_SECRET",
          "Refresh": "false"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "ApiSettings": {
    "Engine": "SQLServer",
    "UseReverseProxyHeaders": true
  },
  "Urls": "http://0.0.0.0:80"
}
